azul = #59162B
gris_claro = #F2F2F2
blanco = rgb(254,254,254) 
celeste = rgb(14,116,175)
negro_claro = #625D59
@font-face {
	font-family: 'Droid Sans Mono';
	src:url('../fonts/Droid_Sans_Mono/DroidSansMono.ttf');
	font-weight: normal;
	font-style: normal;
}
@font-face {
	font-family: 'subheader';
	src:url('../fonts/Monofett/Monofett.ttf');
	font-weight: normal;
	font-style: normal;
}
@font-face {
	font-family: 'header';
	src:url('../fonts/Bree_Serif/BreeSerif-Regular.ttf');
	font-weight: normal;
	font-style: normal;
}
@font-face {
	font-family: 'icomoon';
	src:url('../fonts/icomoon/fonts/icomoon.eot?g83792');
	src:url('../fonts/icomoon/fonts/icomoon.eot?#iefixg83792') format('embedded-opentype'),
					url('../fonts/icomoon/fonts/icomoon.ttf?g83792') format('truetype'),
					url('../fonts/icomoon/fonts/icomoon.woff?g83792') format('woff'),
					url('../fonts/icomoon/fonts/icomoon.svg?g83792#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}
body
	font-weight normal
	text-align center
	header
		margin-top 4em
		margin-bottom 1em
		text-align center
		.titulo
			font-size 3em
			#p1
				font-family "header"
				padding 0
				margin 0
			#p2
				font-family "subheader"
				padding 0
				margin 0
		.logo
			#img1
				margin-right 2em
	.items
		text-align center
		#inicio:before
			font-family "icomoon"
			content "\e900   "
		#quienes_somos:before
			font-family "icomoon"
			content "\e972   "
		#cursos:before
			font-family "icomoon"
			content "\e603   "
		#fotos:before
			font-family "icomoon"
			content "\e600    "
		#contactanos:before
			font-family "icomoon"
			content "\e944    "
		#aula_virtual:before
			font-family "icomoon"
			content "\e921    "
		#mapa:before
			font-family "icomoon"
			content "\e9ca    "

	section
		border-top 0.5em solid negro_claro
		background-color azul
		color black
		text-align center
		width 100%
		#principal
			background-color gris_claro
			//font-family "Droid Sans Mono"
			font-size 1em
			padding 1em
			margin 0 0 1em 0
			p
				margin 0
		aside
			margin 0 0
			font-size 16px
			.subsection1
				background-color gris_claro
				border 2px solid negro_claro
				margin 0 0 1em 0
				div ul a
					text-decoration none
				div ul a:hover
					color negro_claro
					text-decoration none
				.cabecera
					background-color negro_claro
					color white
					padding 0.5em
					margin 0
					p
						padding 0
						margin 0
				.contenedor
					padding 1em
					ul
						list-style none
						text-align left
					#pagina:before
						font-family "icomoon"
						content "\e605    "
					#facebook:before
						font-family "icomoon"
						content "\ea8d    "
					#twitter:before
						font-family "icomoon"
						content "\ea92    "
					#youtube:before
						font-family "icomoon"
						content "\ea9a    "
			.subsection2
				background-color gris_claro
				border 2px solid negro_claro
				margin 0 0 1em 0
				.cabecera
					background-color negro_claro
					color white
					padding 0.5em
					margin 0
					p
						padding 0
						margin 0
				.contenedor
					padding 1em
			.subsection3
				background-color gris_claro
				border 2px solid negro_claro
				.cabecera
					background-color negro_claro
					color white
					padding 0.5em
					margin 0
					p
						padding 0
						margin 0
				.contenedor
					padding 1em
	footer
		background-color azul
		font-weight bold
		color white
		width 100%
		padding 1em 0

.navbar-brand:hover
	background black

@media screen and (min-width: 1000px)
	body
		section
			#principal
				width 75%
				margin 1em 0.25em 1em 0
			aside
				width 22%
				margin 1em 0 1em 0.25em
			#principal, aside
				display inline-block
				vertical-align top
